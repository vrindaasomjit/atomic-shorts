# Environment Variables for Validation Agent
# Set your API keys here (do not commit to version control)

# Google Gemini API Key (for Gemini models)
GOOGLE_API_KEY=xxxxx
# OpenAI API Key (backup - no longer primary)
OPENAI_API_KEY=xxxxx

# Tavily API Key (for web search)
TAVILY_API_KEY=xxxx
# ANL username for Argo Gateway API
ANL_USERNAME=xxxxx

# Model configuration (using Gemini models)
MODEL=gemini-2.5-flash
#MODEL=gpt40

# Scientific term extraction method
USE_AI_EXTRACTION=true
# Set to false for regex-based extraction (faster, more deterministic)
# Set to true for AI-powered extraction (smarter, better quality)

# Target minutes for storyboard length
TARGET_MINUTES_MIN=1
TARGET_MINUTES_MAX=2

# Maximum validation rounds
MAX_ROUNDS=3

# Words per minute for time estimation
WPM=140

# Maximum characters for PDF context
MAX_CHARS=3500

# Maximum sources for evidence gathering
MAX_SOURCES=3
